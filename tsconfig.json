{
  "ts-node": {
    "compilerOptions": {
      "typeRoots": ["./types", "./katas"]
    },
    "files": true
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["ES5", "ES6", "ESNext", "ES2020"],
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types", "./katas"],
    "types": ["node"]
  }
}
